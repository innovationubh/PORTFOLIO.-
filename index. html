<script>
function show(id){
  document.querySelectorAll('.section').forEach(s=>s.classList.add('hidden'));
  document.getElementById(id).classList.remove('hidden');
}
function back(){ show('menu'); }

function project(n){
  let data={
1:`Rehabilitation Support Device:
Uses motion sensors to track limb movement.
Arduino processes angle and speed.
Correct motion = OK signal.
Wrong motion = buzzer alert.
Helps patients exercise safely.`,
2:`Emotional Regulation System:
Monitors heart rate and skin response.
Detects stress, fear, excitement.
Gives calming feedback.
Improves self-control.`,
3:`Bias Detection System:
Uses questions and GPS location.
Finds unfair decision patterns.
Suggests logical thinking.
Improves awareness.`,
4:`Smart Safety Watch:
Detects heart rate and falls.
Auto GPS emergency alert.
Drowsiness detection.
Life-saving system.`,
5:`Learning Projector App:
Scans textbook page.
Finds matching videos.
Shows best learning content.
Smart study tool.`
  };
  document.getElementById("detail").innerHTML=
  "<h2>Project Detail</h2><p>"+data[n]+"</p><button onclick=\"show('projects')\">‚¨Ö Back</button>";
  show("detail");
}

function save(){
  localStorage.setItem("feedback",document.getElementById("fb").value);
  alert("Feedback saved");
}

let y=new Date().getFullYear();
document.getElementById("class").innerText=(y>=2026?"12":"11");
document.getElementById("age").innerText=y-2008;
</script>

